<% if @comment.valid? %>
  $('.js-comments').prepend("<%= escape_javascript(render(@comment)) %>");
  $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { post: @post, Comment.new}) %>");
<% else %>
  $('.new-comment').html("<%= pluralize(@comment.user.comments.count, 'comment') %>");
<% end %>
